[general]
ignore-merge-commits = true
ignore = body-is-missing,title-match-regex
verbosity = 2

[title-max-length]
line-length = 72

[title-min-length]
min-length = 5

[body-max-line-length]
line-length = 80

#[body-min-length]
#min-length = 0

[trailing-whitespace]

[title-match-regex]
 regex = ^(feat|fix|docs|style|refactor|test|chore)(\([a-z0-9\-]+\))?: .+
